<!-- views/index.ejs -->
<!DOCTYPE html>
<html>
<head>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
<style>
.card {
  box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2);
  max-width: 300px;
  margin: auto;
  text-align: center;
  font-family: arial;
}

.title {
  color: grey;
  font-size: 18px;
}

#btn {
  border: none;
  outline: 0;
  display: inline-block;
  padding: 8px;
  color: white;
  background-color: #000;
  text-align: center;
  cursor: pointer;
  width: 45%; /* Adjust button width */
  font-size: 18px;
  margin: 5px; /* Add margin between buttons */
}

#btn{
  text-decoration: none;
  font-size: 22px;
  color: rgb(255, 247, 247);
}

#btn:hover, a:hover {
  opacity: 0.7;
}

.goBack {
  position: absolute;
  top: 10px;
  left: 2px;
  size: 5px;
  text-decoration: none;
  font-size: 22px;
  color: rgb(255, 247, 247);
  background-color: #000;
}
</style>
</head>
<body>
    <a href="/" class="goBack" >Go Back</a>
<h2 style="text-align:center">User Profile Card</h2>

<% users.forEach((user, index) => { %>

    <div class="card">
        <img src="<%= user.image %>" alt="<%= user.username %>" style="width:100%">
        <h1><%= user.username %></h1>
        <p class="title"><%= user.email %></p>
        <p><%= user.name %></p>
        <a href="/update/<%=user._id%>" id="btn" > Update</a>
        <a href="/delete/<%=user._id%>" id="btn"> Delete</a>
      </div>
<% }) %>



</body>
</html>
